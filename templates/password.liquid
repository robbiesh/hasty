{% layout 'password' %}

<div class='container'>
    <div class='lg:w-2/3 w-full mx-auto pt-32'>
        
        <div class='block mb-10'>
            {% form 'customer' %}
                
                {% if form.posted_successfully? %}

                    <div class='p-8 border border-black border-solid'>
                        <p>You have successfully signed up!</p>
                    </div>

                {% else %}

                    <div class='block text-center mb-10'>
                        <h4 class='mb-4'>Launching soon later this year!</h4>
                        <p>Enter your email below to get notified when we launch:</p>
                    </div>

                    <div>
                        <input type="hidden" name="contact[tags]" value="prospect, password page">
                        <div class='flex w-full flex-wrap'>
                            <input type="email" name="contact[email]" id="Email" spellcheck="false" autocomplete="off" autocapitalize="off"
                                placeholder="Join our email list" class='flex-auto p-4 rounded-none border-2 border-solid border-r-0'>
                            <button type="submit" name="submit" class="btn w-full md:w-auto">Submit</button>
                        </div>
                    </div>

                    {% if form.errors %}
                    <div class='p-4 border border-black border-solid mt-8'>
                        {{ form.errors | default_errors }}
                    </div>
                    {% endif %}

                {% endif %}

            {% endform %}
        </div>

        {% include 'socials' %}

    </div>
</div>
