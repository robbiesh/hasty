{% assign coll = section.settings.featured_collection %}
<div class='block py-10 lg:py-20'>
  <div class='container'>
      <div class='grid grid-cols-1 md:grid-cols-3 md:gap-x-4 gap-y-8 w-full'>
      {% for prod in collections[coll].products %}
          {% include 'item', prod %}
      {% endfor %}
      </div>
  </div>
</div>

{% schema %}
    {
      "name": "Featured Collection",
      "settings": [
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Featured Collection",
            "info": "Select a featured collection"
        }
      ],
      "presets": [
        {
          "name": "Featured Collection"
        }
      ]
    }
{% endschema %}