{% if type == blank %}
  {% assign type = 'text' %}
{% endif %}
{% if autocomplete == blank %}
  {% assign autocomplete = 'off' %}
{% endif %}
{% if autocapitalize == blank %}
  {% assign autocapitalize = 'off' %}
{% endif %}
{% if spellcheck == blank %}
  {% assign spellcheck = 'false' %}
{% endif %}
{% if required == blank %}
  {% assign required = 'false' %}
{% endif %}

{%- capture id -%}
{{type}}{{name}}{{ className | replace: ' ', '' }}
{%- endcapture -%}

{%- capture cx -%}
  input-wrapper x
  {{ className }}
{%- endcapture -%}

<div class='block {{ class }}'>
  <label for='{{id}}_{{ label | handleize }}'>{{ label }}</label>
  <input
    id='{{id}}_{{ label | handleize }}'
    class='input'
    type='{{ type }}'
    name='{{ name }}'
    placeholder='{{ placeholder }}'
    value='{{ value }}'
  />
</div>

{% assign class = blank %}
{% assign label = blank %}
{% assign id = blank %}
{% assign type = blank %}
{% assign name = blank %}
{% assign placeholder = blank %}
{% assign value = blank %}
{% assign required = blank %}